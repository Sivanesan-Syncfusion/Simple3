<!-- Button trigger modal -->
<button type="button" id="delete-confirm-trigger" class="btn btn-primary hide" data-toggle="modal" data-target="#delete-confirm-dialog">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade text-break" id="delete-confirm-dialog" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger alert-header">
                <img src="~/js/img/question.svg" class="alert-img" />
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3 class="text-center">Are you sure you want to delete</h3><br />
                <div id="delete-data" style="margin-left: 24px;">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="delete-confirm-btn" class="btn btn-primary btn-danger">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>